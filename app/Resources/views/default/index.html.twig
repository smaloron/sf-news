{% extends 'layouts/front-layout.html.twig' %}

{% block title %} {{ parent() }}:: Accueil {% endblock %}

{% block content %}



    <h2>Les derniers articles</h2>

    {% for article in articles %}
        <article class="col-md-6">
            <h2>
                <a href="{{ path('article_details', {id: article.id}) }}">
                    {{ article.title }}
                </a>
            </h2>
            <p class="lead">
                Par <a href="index.php">{{ article.author.fullName }}</a>
            </p>
            <p><span class="glyphicon glyphicon-time"></span> Publi√© le {{ article.createdAt | date('d/m/Y') }}</p>
            <hr>
            <img class="img-responsive img-circle"
                 src="img/photos/{{ article.image.fileName }}"
                 alt="{{ article.image.legend }}">
            <hr>
            <p>{{ article.lead }}</p>
            <a class="btn btn-primary" href="#">Read More <span class="glyphicon glyphicon-chevron-right"></span></a>
        </article>
    {% endfor %}



{% endblock %}

